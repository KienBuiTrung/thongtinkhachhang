<h1>DANH SÁCH NGƯỜI SỬ DỤNG</h1>
<table class="table table-bordered table-hover">
<thead>
   <tr>
	<th>STT</th>
	<th>Họ tên</th>
	<th>Email</th>
	<th>Phòng ban</th>
	<th>Tổng số KH đã nhập</th>
	<% if current_user.is_admin? %>
    <th>Xem</th>
	  <th>Xóa</th>
	<% end %>
	</tr>
</thead>
   <tbody>
   <% @users.each do |user| %>
   <tr>
   <th scope="row"><%= user.id%></th>
   	<td><%= user.name %></td>
   	<td><%= user.email %></td>
   	<td><%= user.department %></td>
   	<td><%= current_user.denied_customers.count %></td>

   	<% if current_user.is_admin? %>
      <td><%= link_to "Chi tiết", user_path(current_user) %></td>    
      <td><%= link_to "Delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
      </td>                       
  <% end %>

   </tr>
   <% end %>
   	
   </tbody>
	
</table>