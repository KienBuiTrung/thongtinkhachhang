
<h1>Nhập Khách hàng mới</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@denied_customer) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name, "Họ tên" %>
      <%= f.text_field :name %>

      <%= f.label :id_no, "Số CMND" %>
      <%= f.text_field :id_no %>

      <%= f.label :CIF, "CIF" %>
      <%= f.text_field :cif %>

      <%= f.label :amount, "Số tiền muốn vay" %>
      <%= f.text_field :amount, class: "currency" %>

      <%= f.label :purpose, "Mục đích" %>
      <%= f.text_area :purpose, size: "2x4" %>

      <%= f.label :explaination, "Lý do từ chối" %>
      <%= f.text_area :explaination, size: "3x6" %>

      <%= f.hidden_field :user_id, value: current_user.id %>

      <%= f.submit "Save", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
